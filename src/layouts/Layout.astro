---
import "../styles/global.css";
// Supports weights 100-900
import "@fontsource-variable/inter";

import Header from "@/components/Header.astro";
import BackgroundPaths from "@/components/kokonutui/background-paths";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>
      Crear Página Web Profesional para Tu Negocio | Pablo Rodríguez
    </title>
    <meta
      name="description"
      content="¿Quieres crear una página web para tu negocio? Te diseñamos una web profesional, optimizada para Google, con diseño moderno y lista para vender."
    />
  </head>
  <body>
    <BackgroundPaths client:only="react" />
    <Header />
    <slot />
  </body>

  <style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
      font-family: "Inter Variable", sans-serif;
      background-color: #000;
      color-scheme: light dark;
      scroll-behavior: smooth;
    }
  </style>
</html>
