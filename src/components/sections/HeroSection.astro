import { Button } from "@/components/ui/button";
import CardSwapDemo, {
  type CardItem,
} from "../react-bits/Components/CardSwap/CardSwapDemo";

const cardItems: CardItem[] = [
  {
    title: "https://negococloud.es",
    imageSrc: "/images/negoco.webp",
  },
  {
    title: "https://asesoresmsl.com",
    imageSrc: "/images/asesoresmsl.webp",
  },
  {
    title: "http://realtymarket.es",
